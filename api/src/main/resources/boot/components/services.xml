<?xml version =	'1.0' encoding = 'ISO-8859-1'?>
<config>

	<module name="orchestra-DAO" api="false" inheritance="io.vertigo.dynamo.impl.store.util.DAOBroker">
		<component class="io.vertigo.orchestra.dao.definition.OProcessDAO" />
		<component class="io.vertigo.orchestra.dao.definition.OTaskDAO" />
		<component class="io.vertigo.orchestra.dao.execution.OProcessExecutionDAO" />
		<component class="io.vertigo.orchestra.dao.execution.OTaskExecutionDAO" />
		<component class="io.vertigo.orchestra.dao.planification.OProcessPlanificationDAO" />
	</module>

	<module name="orchestra-PAO" api="false" inheritance="java.lang.Object">
		<component class="io.vertigo.orchestra.dao.execution.ExecutionPAO" />
		<component class="io.vertigo.orchestra.dao.planification.PlanificationPAO" />
		<component class="io.vertigo.orchestra.dao.application.ApplicationPAO" />
	</module>
	
	<module name="orchestra-HELPER" api="false" inheritance="java.lang.Object">
	</module>


	<module name="orchestra-ASPECT" inheritance="java.lang.Object" >
		<aspect class="io.vertigo.dynamo.impl.transaction.VTransactionAspect"/>
	</module>
	
	
	<module name="orchestra-APP-UTILITY" inheritance="java.lang.Object" >
		<component api="ApplicationServices" class="io.vertigo.orchestra.services.ApplicationServicesImpl" />
	</module>
		
	<module name="orchestra-SERVICES" inheritance="io.vertigo.orchestra.services.OrchestraServices">
		<component api="ProcessServices" class="io.vertigo.orchestra.services.definition.ProcessServicesImpl" />
		<component api="TaskServices" class="io.vertigo.orchestra.services.definition.TaskServicesImpl" />
		<component api="ExecutionServices" class="io.vertigo.orchestra.services.execution.ExecutionServicesImpl" />
		<component api="ProcessPlanificationServices" class="io.vertigo.orchestra.services.planification.ProcessPlanificationServicesImpl" />
		<component api="PlannerManager" class="io.vertigo.orchestra.services.planification.manager.PlannerManagerImpl">
			<plugin class="io.vertigo.orchestra.services.planification.plugin.RecurrentProcessPlannerPlugin"/>
		</component>
		<component api="OTaskManager" class="io.vertigo.orchestra.services.execution.manager.OTaskManagerImpl"/>
		<component api="OCoordinationManager" class="io.vertigo.orchestra.services.execution.manager.OCoordinationManagerImpl">
			<plugin class="io.vertigo.orchestra.services.execution.plugin.DbSequentialCoordinatorPlugin"/>
		</component>
		
	</module>
	
	
</config>